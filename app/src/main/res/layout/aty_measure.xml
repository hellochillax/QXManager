<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38af34"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding">

    <TextView
        style="@style/aty_healthy_list_title"
        android:text="健康测量"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/title2_margin_title"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/measure_icon_size"
                android:layout_height="@dimen/measure_icon_size"
                />
            <TextView
                android:id="@+id/user_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/measure_name_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/aty_measure_white_bg"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="2.5">
            <TextView
                style="@style/normal_text_style"
                android:text="最近一次测量记录"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>
            <TextView
                android:id="@+id/type"
                style="@style/normal_text_style"
                android:layout_gravity="left"
                android:paddingLeft="40dp"
                android:text="体温"/>
            <TextView
                android:id="@+id/result"
                style="@style/large_text_style"
                android:text="36.5"/>
            <TextView
                android:id="@+id/result2"
                style="@style/large_text_style"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/result3"
                style="@style/large_text_style"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/type2"
                style="@style/normal_text_style"
                android:text="摄氏度" />
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="4dp"-->
                <!--android:background="@android:color/white"-->
                <!--android:layout_marginLeft="40dp"-->
                <!--android:layout_marginRight="40dp"/>-->
            <!--<com.taichangkeji.tckj.cusview.MeasureIndicator-->
                <!--android:id="@+id/indicator"-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="40dp"-->
                <!--android:layout_marginBottom="40dp"-->
                <!--app:left_max_count="100"-->
                <!--app:right_max_count="100"-->
                <!--/>-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/title2_margin_title"
        android:layout_height="@dimen/bottom_line_height">
        <ImageView
            android:id="@+id/bottom_l"
            style="@style/bottom_button_style"
            android:src="@mipmap/healthy_manager"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/bottom_c"
            style="@style/bottom_button_style"
            android:src="@mipmap/last_record"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/bottom_r"
            style="@style/bottom_button_style"
            android:src="@mipmap/member_manager"
            />
    </LinearLayout>


</LinearLayout>